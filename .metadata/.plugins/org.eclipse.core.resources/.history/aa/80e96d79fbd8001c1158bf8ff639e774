#include <stdint.h>
#include "stm32f091rct6.h"

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

enum state{OFF,ON,EMERGENCY};
enum state currentState = OFF;
void delay(void)
{
	// some delay for the debouncing of the buttons
	for(uint32_t i = 0 ; i < 300000/2 ; i ++);
}
int main(void)
{
    /*2 buttons causing interruptions: OnOff(PB0) and Emergency(PB2). 4 LEDs: PA0-3 */
	GPIO_PinHandle_t butOnOff, butEmerg, led0, led1, led2, led3;
	//LEDs
	led0.pGPIO = GPIOA;
	led0.GPIO_PinConfig.GPIO_PinNumber = 0;
	led0.GPIO_PinConfig.GPIO_PinMode = GPIO_OUT;
	led0.GPIO_PinConfig.GPIO_PinOutType = GPIO_PUSHPULL;
	led0.GPIO_PinConfig.GPIO_PinOutSpeed = GPIO_MEDIUMSPEED;
	led0.GPIO_PinConfig.GPIO_PinPullUpDown = GPIO_NOPULL;

	led1.pGPIO = GPIOA;
	led1.GPIO_PinConfig.GPIO_PinNumber = 1;
	led1.GPIO_PinConfig.GPIO_PinMode = GPIO_OUT;
	led1.GPIO_PinConfig.GPIO_PinOutType = GPIO_PUSHPULL;
	led1.GPIO_PinConfig.GPIO_PinOutSpeed = GPIO_MEDIUMSPEED;
	led1.GPIO_PinConfig.GPIO_PinPullUpDown = GPIO_NOPULL;

	led2.pGPIO = GPIOA;
	led2.GPIO_PinConfig.GPIO_PinNumber = 2;
	led2.GPIO_PinConfig.GPIO_PinMode = GPIO_OUT;
	led2.GPIO_PinConfig.GPIO_PinOutType = GPIO_PUSHPULL;
	led2.GPIO_PinConfig.GPIO_PinOutSpeed = GPIO_MEDIUMSPEED;
	led2.GPIO_PinConfig.GPIO_PinPullUpDown = GPIO_NOPULL;

	led3.pGPIO = GPIOA;
	led3.GPIO_PinConfig.GPIO_PinNumber = 3;
	led3.GPIO_PinConfig.GPIO_PinMode = GPIO_OUT;
	led3.GPIO_PinConfig.GPIO_PinOutType = GPIO_PUSHPULL;
	led3.GPIO_PinConfig.GPIO_PinOutSpeed = GPIO_MEDIUMSPEED;
	led3.GPIO_PinConfig.GPIO_PinPullUpDown = GPIO_NOPULL;

	//BUTTONS
	butOnOff.pGPIO = GPIOB;
	butOnOff.GPIO_PinConfig.GPIO_PinNumber = 0;
	butOnOff.GPIO_PinConfig.GPIO_PinMode = GPIO_OUT;
	butOnOff.GPIO_PinConfig.GPIO_PinPullUpDown = GPIO_NOPULL;

	butEmerg.pGPIO = GPIOB;
	butEmerg.GPIO_PinConfig.GPIO_PinNumber = 2;
	butEmerg.GPIO_PinConfig.GPIO_PinMode = GPIO_OUT;
	butEmerg.GPIO_PinConfig.GPIO_PinPullUpDown = GPIO_NOPULL;

	//Initializations
	GPIO_PinInit(&led0);
	GPIO_PinInit(&led1);
	GPIO_PinInit(&led2);
	GPIO_PinInit(&led3);
	GPIO_PinInit(&butOnOff);
	GPIO_PinInit(&butEmerg);

	//LEDs OFF
	GPIO_WritePin(GPIOA,0,0);
	GPIO_WritePin(GPIOA,1,0);
	GPIO_WritePin(GPIOA,2,0);
	GPIO_WritePin(GPIOA,3,0);

	//configure interrupts (without priorities atm)
	//Button OnOff (GPIOB0)
	GPIO_IRQ_EnableDisable(IRQ_EXTI0_1, ENABLE);
	//Button Emergency (GPIOB2)
	GPIO_IRQ_EnableDisable(IRQ_EXTI2_3, ENABLE);

	/* Loop forever */
	for(;;);
}

/*ISR handlers*/
void EXTI0_1_IRQHandler(void){ //when button on-off
	GPIO_IRQ_Handling(0);
	if (currentState == OFF){
		currentState = ON;
		GPIO_WritePin(GPIOA,0,0);
		GPIO_WritePin(GPIOA,1,1);
		GPIO_WritePin(GPIOA,2,1);
		GPIO_WritePin(GPIOA,3,0);
	}
	else{
		currentState = OFF;
		GPIO_WritePin(GPIOA,0,0);
		GPIO_WritePin(GPIOA,1,0);
		GPIO_WritePin(GPIOA,2,0);
		GPIO_WritePin(GPIOA,3,0);
	}
}

void EXTI2_3_IRQHandler(void){
	currentState=EMERGENCY;
	GPIO_WritePin(GPIOA,0,1);
	GPIO_WritePin(GPIOA,1,1);
	GPIO_WritePin(GPIOA,2,1);
	GPIO_WritePin(GPIOA,3,1);
}
